<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link href="/bootstrap/css/bootstrap.min.css" rel="stylesheet" media="screen">
    
    <title><%= title %></title>
  </head>
  <body style="padding:0;">
    <% if(username){ %>
      <%- include("home")%>
       <div id="page-wrapper">
        <div class="page-inner">
          <div class="row">
            <div class="col-md-12">
              <h2 style="color:#f00;">Add Students</h2>
              <h5>Welcome <%- username%>,Love to see you back.</h5>
            </div>
          </div>
          <hr>
          <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <form action="/comment/addcourse" method="post" role="form">
                    <div class="form-group">
                      <label for="name" class="control-label text-primary">课程名:</label>
                      <input type="text" class="form-control" id="name" name="name">
                    </div>
                    <div class="form-group">
                      <label for="ctime" class="control-label text-primary">课时:</label>
                      <input type="text" class="form-control" id="ctime" name="ctime">
                    </div>
                    <div class="form-group">
                      <label for="credit" class="control-label text-primary">学分:</label>
                      <input type="text" class="form-control" id="credit" name="credit">
                    </div>
                    <div class="modal-footer">
                      <button type="button" class="btn btn-default" onclick="reset()">重置</button>
                      <input type="submit" class="btn btn-primary" data-toggle="modal" data-target="#comfirm" value="提交">
                    </div>
                  </form>
              
            </div>
          </div>
        </div>
       </div>
   <% }else{ %>
    <script>location.href="./login";</script>
   <% } %>
  </body>
</html>
<script src="/javascripts/jquery-1.11.3.js"></script>
<script src="/bootstrap/js/bootstrap.min.js"></script>
<script>
  function reset(){
    $("#name").val("");
    $("#age").vali("");
    $("#pwd").val("");
  }

  function togg(){
    $("#ok").modal("toggle");
  }

  $(":submit").on("click",function(e){
    if($("#name").val()==""&&$("#ctime").val()==""&&$("#credit").val()==""){
      alert("请完善信息");
      e.preventDefault();
    }else{
      alert("添加成功");
    }
  })

</script>
